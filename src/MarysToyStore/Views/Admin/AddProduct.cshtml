@model ProductViewModel
<h2>Add Product</h2>
<div class="form-horizontal">
    <form method="post">
        <div class="form-group">
            <label asp-for="Product.Name"></label>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.Description"></label>
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.Price"></label>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.Brand"></label>
            <select asp-for="Product.BrandId" asp-items="@(new SelectList(Model.Brands, "Id", "Name"))" class = "form-control"></select>
            <span asp-validation-for="Product.Brand"></span>
        </div>

        <div asp-validation-summary="All"></div>
        <p>
            <button type="submit" class="btn btn-primary" role="button">Add</button>
        </p>
    </form>
</div>
