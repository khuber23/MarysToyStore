@model IEnumerable<ProductCategory>
<div>
    <p>
        <a asp-controller="Admin" asp-action="AddProductCategory" class="btn btn-primary" role="button">Add Product Category</a>
    </p>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td><a asp-controller="Admin" asp-action="EditProductCategory" asp-route-id="@item.Id">Edit</a></td>
            </tr>
        }
    </table>
</div>
