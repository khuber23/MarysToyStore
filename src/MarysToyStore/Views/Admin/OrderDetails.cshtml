@model Order

<h2>Order Details</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control-plaintext" type="text" readonly />
    </div>

    <div class="form-group">
        <label asp-for="User.FullName"></label>
        <input asp-for="User.FullName" class="form-control-plaintext" type="text" readonly />
    </div>

    <div class="form-group">
        <label asp-for="DateOrdered"></label>
        <input asp-for="DateOrdered" class="form-control-plaintext" type="text" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control-plaintext" type="text" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Tax"></label>
        <input asp-for="Tax" class="form-control-plaintext" type="text" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Cost"></label>
        <input asp-for="Cost" class="form-control-plaintext" type="text" readonly />
    </div>

    <div class="form-group">
        <label asp-for="OrderStatus"></label>
        <select asp-for="OrderStatus"
                asp-items="Html.GetEnumSelectList<OrderStatus>()"
                class="form-control">
        </select>
    </div>

    <p>
        <button type="submit" class="btn btn-primary" role="button">Save</button>
    </p>
</form>